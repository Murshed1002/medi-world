
# postgres
DB_HOST=localhost
DB_PORT=5432
DB_USER=root
DB_PASSWORD=root
DB_NAME=mediworld_db
DATABASE_URL=postgresql://root:root@localhost:5432/mediworld_db

# redis
REDIS_HOST=localhost
REDIS_PORT=6379

# migrations - set to 'true' to run migrations on startup
RUN_MIGRATIONS=false

NODE_ENV=dev
APP_PORT=8080

# Client URL for CORS
CLIENT_URL=http://localhost:3000

# Razorpay credentials (get from https://dashboard.razorpay.com/)
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret
RAZORPAY_WEBHOOK_SECRET=your_razorpay_webhook_secret

# Stripe credentials (get from https://dashboard.stripe.com/)
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# JWT Authentication
JWT_ACCESS_SECRET=your_jwt_access_secret_min_32_chars
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_SECRET=your_jwt_refresh_secret_min_32_chars
JWT_REFRESH_EXPIRY=30d

# SMS Provider (console/twilio/aws-sns)
SMS_PROVIDER=console
# TWILIO_ACCOUNT_SID=your_twilio_account_sid
# TWILIO_AUTH_TOKEN=your_twilio_auth_token
# TWILIO_PHONE_NUMBER=your_twilio_phone_number
